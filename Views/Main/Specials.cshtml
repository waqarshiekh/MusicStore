@{
    ViewBag.Title = "Specials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="wrap">
        <div class="content">
            <div class="products-box">
                <div class="products">
                    <h5><span>Specilas</span> Albums</h5>
                    <div class="section group">
                        @foreach (var a in Model)
                        {
                            <div class="grid_1_of_5 images_1_of_5">
                                <video width="200" height="200" >
                                    <source src=~/Content/Video/@a.pname type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                                <h3 style="overflow-x:hidden">@a.searchName </h3>
                                <p>Song Description here</p>
                                <h4><label>$5.00</label>Free</h4>
                                <div class="button"><span><a href="/Main/ShowVideo/@a.Id"> Let's watch </a></span></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


